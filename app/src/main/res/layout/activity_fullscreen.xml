<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.furry.furview2.FullscreenActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="460dp"
        android:id="@+id/pictureImageView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignWithParentIfMissing="false"
        android:contentDescription="@string/imageName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="@string/search_text"
        android:singleLine="true"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:id="@+id/imageButton"
        android:src="@android:drawable/ic_search_category_default"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/pictureImageView"
        android:layout_alignEnd="@+id/pictureImageView" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:id="@+id/tableForTags"></TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableForTags"
        android:layout_above="@+id/pictureImageView">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingEditText"
            android:layout_weight="1"
            android:editable="false"
            android:enabled="false"
            android:text="Rating"
            android:textSize="6dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistEditText"
            android:layout_weight="1"
            android:editable="false"
            android:enabled="false"
            android:layout_gravity="center_vertical"
            android:textSize="6dp"
            android:text="Artist"
            android:gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateEditText"
            android:layout_weight="1"
            android:editable="false"
            android:enabled="false"
            android:layout_gravity="center_vertical"
            android:textSize="6dp"
            android:text="Date"
            android:gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>
