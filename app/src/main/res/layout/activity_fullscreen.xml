<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.furry.furview2.FullscreenActivity">

    <LinearLayout
        android:id="@+id/layoutSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <EditText
            android:id="@+id/tagsEditText"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:hint="@string/search_text"
            android:singleLine="true"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/searchImageButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="0"
            android:src="@android:drawable/ic_search_category_default" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageButton
                android:id="@+id/buttonSaveDelInDB"
                android:layout_width="52dp"
                android:layout_height="52dp" />

            <ProgressBar
                android:id="@+id/saveImageButtonProgressBar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:indeterminate="true"
                android:layout_gravity="right" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/fullscreenButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_weight="0"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_btn_square_out"
            android:layout_gravity="right" />
    </LinearLayout>

    <EditText
        android:id="@+id/scoreEditText"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.2"
        android:editable="false"
        android:enabled="false"
        android:gravity="center"
        android:textIsSelectable="false"
        android:layout_below="@+id/layoutSearchBar" />

    <LinearLayout
        android:id="@+id/layoutInfoBar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignEnd="@+id/layoutTagBar"
        android:layout_alignRight="@+id/layoutTagBar"
        android:layout_below="@+id/layoutSearchBar"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/scoreEditText"
        android:layout_toEndOf="@+id/scoreEditText">

        <EditText
            android:id="@+id/artistEditText"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:enabled="false"
            android:gravity="center"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:enabled="false"
            android:gravity="center"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTagBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutInfoBar"
        android:orientation="vertical"
        android:gravity="center">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TableLayout
                    android:id="@+id/tagsTableLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/layoutSearchBar"
                    android:layout_weight="0.5"
                    android:visibility="gone"
                    android:gravity="center" />

                <Button
                    android:id="@+id/tagsButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="30sp"
                    android:clickable="true"
                    android:text="@string/tags"
                    android:textSize="10sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollDescriptionText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/descriptionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutTagBar"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/descriptionLabel"
                android:id="@+id/textView3" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </LinearLayout>
    </ScrollView>

    <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
        android:id="@+id/picImgView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/progressBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/layoutTagBar"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:contentDescription="@string/imageName" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/descriptionButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layoutTagBar"
        android:indeterminateOnly="true"
        android:visibility="visible" />

    <Button
        android:id="@+id/descriptionButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="false"
        android:text="@string/description"
        android:textSize="10sp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutFullscreenOut"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            >

            <ImageButton
                android:id="@+id/buttonSaveDelInDBFullscreen"
                android:layout_width="52dp"
                android:layout_height="52dp" />

            <ProgressBar
                android:id="@+id/saveImageButtonProgressBar2"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:indeterminate="true"
                android:layout_gravity="right" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/fullscreenButton2"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_btn_square_in"
            android:layout_gravity="right"
            android:layout_alignRight="@+id/descriptionButton" />
    </LinearLayout>


</RelativeLayout>